{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@formspree/react",
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
