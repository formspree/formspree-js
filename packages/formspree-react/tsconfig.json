{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@formspree/react",
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "@formspree/core": ["../formspree-core/src"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
