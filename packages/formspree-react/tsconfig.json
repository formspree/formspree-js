{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@formspree/react",
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
