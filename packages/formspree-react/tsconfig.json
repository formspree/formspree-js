{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "declaration": true,
    "declarationDir": "dist/types",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
